<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with(model: @book, url: books_path) do |f| %>
  <div class="form-input">
    <%= f.label :title %><%= f.text_field :title %>
  </div>
  <div class="form-input">
    <%= f.label :body %><%= f.text_area :body %>
  </div>
  <div><%= f.submit 'Create Book' %></div>
<% end %>
